<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#cc449def" />
            <stroke
                android:width="1dp"
                android:color="#2f6699" />
            <corners
                android:radius="8dp" />
           
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#cc449def"
                android:endColor="#cc2f6699"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#2f6699" />
            <corners
                android:radius="10dp" />
            
        </shape>
    </item>
</selector>